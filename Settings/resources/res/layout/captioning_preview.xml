<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/preview_viewport" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/settings_side_margin" android:paddingEnd="@dimen/settings_side_margin">
        <ImageView android:layout_width="match_parent" android:layout_height="713px" android:src="@drawable/caption_background" android:scaleType="fitXY" android:contentDescription="@null"/>
        <FrameLayout android:layout_gravity="bottom|left|center_vertical|center_horizontal|center|start" android:id="@+id/preview_window" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.android.internal.widget.SubtitleView android:id="@+id/preview_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/captioning_preview_text"/>
        </FrameLayout>
    </FrameLayout>
    <FrameLayout android:id="@+id/properties_fragment" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
