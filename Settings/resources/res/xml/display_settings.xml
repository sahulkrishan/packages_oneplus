<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:title="@string/display_settings" android:key="display_settings" app:keywords="@string/keywords_display">
    <com.oneplus.settings.ui.OPPreferenceHeaderMargin android:key="preference_divider_line"/>
    <PreferenceCategory android:title="@string/display_label" android:key="screen_brightness">
        <com.android.settingslib.RestrictedSwitchPreference android:icon="@drawable/op_ic_settings_adaptive_brightness" android:persistent="false" android:title="@string/auto_brightness_title" android:key="auto_brightness" android:summary="@string/auto_brightness_summary" app:userRestriction="no_config_brightness"/>
        <com.oneplus.settings.ui.OPBrightnessSeekbarPreferenceCategory android:key="manual_brightness_displays" app:userRestriction="no_config_brightness"/>
        <com.android.settings.TimeoutListPreference android:icon="@drawable/op_ic_settings_sleep" android:entries="@array/screen_timeout_entries" android:title="@string/screen_timeout" android:key="screen_timeout" android:entryValues="@array/screen_timeout_values"/>
        <PreferenceScreen android:icon="@drawable/op_ic_settings_night_mode" android:title="@string/oneplus_night_mode_enabled_op" android:key="oneplus_night_mode" android:fragment="com.oneplus.settings.better.OPNightMode" app:keywords="@string/oneplus_search_keyword_night_mode"/>
        <PreferenceScreen android:icon="@drawable/op_ic_settings_reading_mode" android:title="@string/oneplus_reading_mode" android:key="oneplus_reading_mode" android:fragment="com.oneplus.settings.better.OPReadingMode" app:keywords="@string/oneplus_search_keyword_read_mode"/>
        <PreferenceScreen android:icon="@drawable/op_ic_settings_screen_color_mode" android:title="@string/oneplus_screen_color_mode_title" android:key="screen_color_mode" android:fragment="com.oneplus.settings.better.OPScreenColorMode" app:keywords="@string/oneplus_search_keyword_screen_color_mode"/>
        <SwitchPreference android:icon="@drawable/op_ic_settings_video_enhancer" android:title="@string/oneplus_video_enhancer" android:key="video_enhancer" android:summary="@string/oneplus_video_enhancer_summary"/>
        <PreferenceScreen android:icon="@drawable/op_ic_settings_notch_display_guide" android:title="@string/oneplus_notch_display_title" android:key="oneplus_notch_display_guide" app:keywords="@string/oneplus_search_keyword_notch_display">
            <intent android:action="com.oneplus.settings.action.NOTCHDISPLAYGUIDE"/>
        </PreferenceScreen>
        <PreferenceScreen android:icon="@drawable/op_ic_settings_app_display_in_fullscreen" android:persistent="false" android:title="@string/oneplus_app_display_fullscreen_title" android:key="oneplus_notch_fullscreen_app" android:summary="@string/oneplus_app_display_fullscreen_summary" app:keywords="@string/oneplus_search_keyword_fullscreen_app"/>
        <PreferenceScreen android:icon="@drawable/op_ic_settings_app_display_in_fullscreen" android:persistent="false" android:title="@string/oneplus_app_display_fullscreen_title" android:key="display_size_adaption" android:summary="@string/oneplus_display_size_adaption_summary" app:keywords="@string/oneplus_search_keyword_fullscreen_app"/>
        <com.android.settingslib.RestrictedPreference android:icon="@drawable/op_ic_settings_ambient_display" android:persistent="false" android:title="@string/oneplus_doze_title" android:key="doze" app:keywords="@string/oneplus_search_keyword_doze" app:userRestriction="no_ambient_display"/>
        <com.android.settingslib.RestrictedPreference android:icon="@drawable/op_ic_settings_ambient_display" android:persistent="false" android:title="@string/oneplus_doze_title_801" android:key="doze_801" app:keywords="@string/oneplus_search_keyword_doze" app:userRestriction="no_ambient_display"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/header_category_custom" android:key="header_category_custom">
        <PreferenceScreen android:title="@string/wallpaper_attributions" android:key="lockguard_wallpaper_settings" app:keywords="@string/oneplus_search_keyword_wallpaper_settings"/>
        <SwitchPreference android:title="@string/oneplus_dark_mode" android:key="dark_mode" android:summary="@string/oneplus_dark_mode_summary"/>
        <ListPreference android:persistent="true" android:entries="@array/oneplus_theme_mode_entries" android:title="@string/op_theme_mode_title" android:key="op_theme_mode" android:summary="@string/op_light_mode_title" android:entryValues="@array/oneplus_theme_mode_values" app:keywords="@string/oneplus_search_keyword_theme_mode"/>
        <com.oneplus.settings.ui.ColorPickerPreference android:title="@string/theme_accent_color_title" android:key="theme_accent_color" app:keywords="@string/oneplus_search_keyword_accent_color"/>
        <SwitchPreference android:title="@string/notify_light_enable_title" android:key="notify_light_enable" app:keywords="@string/oneplus_search_keyword_notify_light"/>
        <PreferenceScreen android:title="@string/led_settings_title" android:key="led_settings" android:summary="@string/led_settings_summary" android:fragment="com.oneplus.settings.notification.OPLEDSettings" app:keywords="@string/oneplus_search_keyword_led_settings"/>
        <SwitchPreference android:title="@string/oneplus_back_topic_theme_title" android:key="back_topic_theme" android:summary="@string/oneplus_back_topic_theme_summary"/>
        <PreferenceScreen android:title="@string/oneplus_font_style" android:key="font_style_settings" android:fragment="com.oneplus.settings.OPFontStyleSettings"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/screen_zoom_title" android:key="display_size">
        <PreferenceScreen android:title="@string/title_font_size" android:key="font_size" android:fragment="com.android.settings.accessibility.ToggleFontSizePreferenceFragment" app:keywords="@string/keywords_display_font_size"/>
        <com.android.settings.display.ScreenZoomPreference android:title="@string/screen_zoom_title" android:key="screen_zoom" android:fragment="com.android.settings.display.ScreenZoomSettings" app:keywords="@string/screen_zoom_keywords"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/header_category_system" android:key="display_system">
        <Preference android:title="@string/status_bar_title" android:key="status_bar_custom" android:fragment="com.oneplus.settings.OPStatusBarCustomizeSettings"/>
        <SwitchPreference android:persistent="false" android:title="@string/accelerometer_title" android:key="toggle_lock_screen_rotation_preference"/>
        <DropDownPreference android:title="@string/display_vr_pref_title" android:key="vr_display_pref" android:summary="%s"/>
        <PreferenceScreen android:title="@string/screensaver_settings_title" android:key="screensaver" android:fragment="com.android.settings.dream.DreamSettings"/>
    </PreferenceCategory>
</PreferenceScreen>
