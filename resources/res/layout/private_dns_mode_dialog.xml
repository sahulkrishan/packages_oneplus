<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/oneplus_settings_layout_margin_left3" android:paddingEnd="@dimen/oneplus_settings_layout_margin_left3">
        <RadioGroup android:id="@+id/private_dns_radio_group" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/private_dns_mode_off" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="@dimen/oneplus_settings_list_item_height_one_line1" android:text="@string/private_dns_mode_off" android:paddingStart="@dimen/oneplus_settings_layout_margin_left2" style="@style/oneplus_contorl_text_style_subheading"/>
            <RadioButton android:id="@+id/private_dns_mode_opportunistic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="@dimen/oneplus_settings_list_item_height_one_line1" android:text="@string/private_dns_mode_opportunistic" android:paddingStart="@dimen/oneplus_settings_layout_margin_left2" style="@style/oneplus_contorl_text_style_subheading"/>
            <RadioButton android:id="@+id/private_dns_mode_provider" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="@dimen/oneplus_settings_list_item_height_one_line1" android:text="@string/private_dns_mode_provider" android:paddingStart="@dimen/oneplus_settings_layout_margin_left2" style="@style/oneplus_contorl_text_style_subheading"/>
            <EditText android:id="@+id/private_dns_mode_provider_hostname" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/oneplus_settings_list_item_height_one_line1" android:hint="@string/private_dns_mode_provider_hostname_hint" android:inputType="none|text|textMultiLine|textUri|textEmailAddress|textEmailSubject|textPassword|textVisiblePassword|textWebEditText|textFilter" android:imeOptions="actionDone" android:layout_marginStart="48dp" android:layout_marginEnd="8dp" style="@style/oneplus_contorl_text_style_subheading"/>
        </RadioGroup>
        <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/private_dns_help_info" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:paddingStart="16dp"/>
    </LinearLayout>
</ScrollView>
