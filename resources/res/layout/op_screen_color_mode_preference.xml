<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/screen_color_mode" android:layout_width="match_parent" android:layout_height="713px">
        <android.support.v4.view.ViewPager android:layout_gravity="center" android:id="@+id/whatsnew_viewpager" android:layout_width="wrap_content" android:layout_height="713px">
            <android.support.v4.view.PagerTitleStrip android:textColor="#ffff" android:layout_gravity="bottom" android:id="@+id/pagertitle" android:background="#0000" android:layout_width="wrap_content" android:layout_height="0dp"/>
        </android.support.v4.view.ViewPager>
        <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:gravity="center_horizontal" android:layout_gravity="bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="30dp">
                    <ImageView android:id="@+id/page0" android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/op_page_now" android:scaleType="fitXY"/>
                    <ImageView android:id="@+id/page1" android:layout_width="8dp" android:layout_height="8dp" android:layout_marginLeft="10dp" android:src="@drawable/op_page" android:scaleType="fitXY"/>
                    <ImageView android:id="@+id/page2" android:layout_width="8dp" android:layout_height="8dp" android:layout_marginLeft="10dp" android:src="@drawable/op_page" android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
