<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="left|right|center_vertical|center_horizontal|fill_horizontal|center" android:start="4dp" android:end="4dp">
                <shape android:tint="@color/op_switch_track_material" android:shape="rectangle">
                    <corners android:radius="7dp"/>
                    <solid android:color="@android:color/transparent"/>
                    <stroke android:width="2dp" android:color="@color/switch_white_disabled_checked_material"/>
                    <size android:height="14dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:gravity="left|right|center_vertical|center_horizontal|fill_horizontal|center" android:start="4dp" android:end="4dp">
                <shape android:tint="@color/op_switch_track_material" android:shape="rectangle">
                    <corners android:radius="7dp"/>
                    <solid android:color="@android:color/transparent"/>
                    <stroke android:width="2dp" android:color="@color/switch_white_disabled_material"/>
                    <size android:height="14dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
